
div.row
  h2 users
  div.row
    div#chart( style="min-width: 310px; height: 400px; max-width: 600px; margin: 0 auto")
  div.row
      .col-lg-2
            div.input-group.input-group-lg
              span.input-group-addon.blue-box
                span name
              input.form-control(placeholder="Filter",ng-model="filter.name")
      .col-lg-2
            div.input-group.input-group-lg
              span.input-group-addon.blue-box
                span Age
              input.form-control(placeholder="Filter",ng-model="filter.age")
      .col-lg-2
            div.input-group.input-group-lg
              span.input-group-addon.blue-box
                span Mail
              input.form-control(placeholder="Filter",ng-model="filter.mail")
      .col-lg-2
            div.input-group.input-group-lg
              span.input-group-addon.blue-box
                span Qualification
              input.form-control(placeholder="Filter",ng-model="filter.qual")
      .col-lg-2
            div.input-group.input-group-lg
              span.input-group-addon.blue-box
                span Sex
              input.form-control(placeholder="Filter",ng-model="filter.sex")
  div(
      ng-repeat="user in users  | filter:filter " )
          .row.list(ng-animate = "'globalAnim-show'", ng-show = "!confirm")
            .col-lg-2 {{user.name}}
            .col-lg-2 {{user.age}}
            .col-lg-2 {{user.mail}}
            .col-lg-2 {{user.qual}}
            .col-lg-2 {{user.sex}}

            .col-lg-1
              a(href='#/user/{{user._id}}')
                button(
                  class="btn btn-info",
                ) edit
            .col-lg-1
              button.btn.btn-danger(
                ng-click="confirm = true"
                ) del

          .row.confirm( ng-show = "confirm", ng-animate = "animate")
            .col-lg-4.col-lg-offset-3
              h6 Sdelete {{user.name}} , {{user.mail}} ?
            .col-lg-1
                  button.btn.btn-danger(ng-click = "supr(user._id)" ) yes
            .col-lg-1
                  button.btn.btn-info(
                    ng-click = "confirm = false"
                  ) no

          hr

